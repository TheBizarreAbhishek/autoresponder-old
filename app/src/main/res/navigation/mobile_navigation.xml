<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.thebizarreabhishek.app.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_smart_reply"
        android:name="com.thebizarreabhishek.app.ui.smartreply.SmartReplyFragment"
        android:label="Smart Reply"
        tools:layout="@layout/fragment_smart_reply" />

    <fragment
        android:id="@+id/navigation_logs"
        android:name="com.thebizarreabhishek.app.ui.logs.LogsFragment"
        android:label="Logs"
        tools:layout="@layout/fragment_logs" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.thebizarreabhishek.app.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>
