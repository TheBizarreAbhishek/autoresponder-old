<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/title_automations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automations"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Busy Mode Card -->
             <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_busy_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/title_automations">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">
                    
                    <ImageView
                        android:id="@+id/icon_busy"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_smart_toy_black_24dp"
                        app:tint="@color/primary"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/primary_container"
                        android:padding="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/tv_busy_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Busy Mode"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/icon_busy"
                        app:layout_constraintEnd_toStartOf="@id/switch_busy"
                        app:layout_constraintTop_toTopOf="@id/icon_busy"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Reply to all incoming messages"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/icon_busy"
                        app:layout_constraintEnd_toStartOf="@id/switch_busy"
                        app:layout_constraintTop_toBottomOf="@id/tv_busy_title"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_busy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Meeting Reply Card -->
             <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_meeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/card_busy_mode">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">
                    
                    <ImageView
                        android:id="@+id/icon_meeting"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_access_time"
                        app:tint="@color/text_secondary"
                        android:padding="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/tv_meeting_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Meeting Reply"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/icon_meeting"
                        app:layout_constraintEnd_toStartOf="@id/switch_meeting"
                        app:layout_constraintTop_toTopOf="@id/icon_meeting"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Active during scheduled events"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/icon_meeting"
                        app:layout_constraintEnd_toStartOf="@id/switch_meeting"
                        app:layout_constraintTop_toBottomOf="@id/tv_meeting_title"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_meeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Weekend Away Card -->
             <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_weekend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/card_meeting">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">
                    
                    <ImageView
                        android:id="@+id/icon_weekend"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_calendar_today"
                        app:tint="@color/text_secondary"
                        android:padding="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/tv_weekend_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Weekend Away"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/icon_weekend"
                        app:layout_constraintEnd_toStartOf="@id/switch_weekend"
                        app:layout_constraintTop_toTopOf="@id/icon_weekend"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Reply with out-of-office message"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/icon_weekend"
                        app:layout_constraintEnd_toStartOf="@id/switch_weekend"
                        app:layout_constraintTop_toBottomOf="@id/tv_weekend_title"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_weekend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/secondary"
        app:tint="@color/white"
        android:contentDescription="Add Rule" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
